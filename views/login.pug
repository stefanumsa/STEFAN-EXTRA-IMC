            a(href='/infrmes') Ver Informe. 

    .container
    block content
  .login-container
    h1(class='title') #{title}
    if error
      p= error
    form(action='/login' method='POST' class='login-form')
      .form-group
        label(for='nombre' class='form-label') Usuario
        input(type='text' name='username' id='nombre' placeholder='Usuario' class='form-input', required)

      .form-group
        label(for='email' class='form-label') Email
        input(type='email' name='email' id='email' placeholder='Correo electrónico' class='form-input', required)

      .form-group
        label(for='password' class='form-label') Contraseña
        input(type='password' name='password' id='password' placeholder='Contraseña' class='form-input', required)
        button(type='button' id='mostrarContrasena')
          i(class='material-symbols-rounded') Mostrar 

      .form-group
        button(type='submit' class='submit-button') Iniciar Sesión

    p ¿No tienes una cuenta? 
      a(href='/registro' class='register-link') Regístrate

    //- Script
    script.
      const passwordInput = document.getElementById('password');
      const mostrarContrasenaBtn = document.getElementById('mostrarContrasena');

      mostrarContrasenaBtn.addEventListener('click', () => {
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            mostrarContrasenaBtn.innerHTML = '<i class="material-symbols-rounded">Ocultar</i>';
        } else {
            passwordInput.type = 'password';
            mostrarContrasenaBtn.innerHTML = '<i class="material-symbols-rounded">Mostrar</i>';
        }
      });