doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title STEFAN-ORDINARIO-CLIENTE-
    link(rel="stylesheet", href="/css/style.css")
  body
    nav
      ul 
        li
          a(href='/') -Inicio-
       
        li.dropdown
          a(href='#') -Agregar-
          .dropdown-content
            a(href='/sustitucion') Agregar Oportunidad de Venta.
            a(href='/base64') Agregar Interaccion.
            a(href='/hexadecimal') Agregar Informe. 

        li.dropdown
          a(href='#') -Ver-
          .dropdown-content
            a(href='/ventas') Ver Oportunidad de Ventas.
            a(href='/interacciones') Ver Interacciones.
            a(href='/informes') Ver Informes.     
     

    .container
    block content
    .container
    h1 Lista de Clientes
    <div class="container">
       a(href='/cesar') Agregar cliente.</a>
    </div>
  if clientes.length > 0
    table
      thead
        tr
          th | ID del Usuario. |
          th Nombre. |
          th Nombre de la Empresa. |
          th Correo Electrónico. |
          th Teléfono del cliente. |
          th Industria de la Empresa. |
          th Tamaño de la Empresa. |
          th Direccion. |
      tbody
        each cliente in clientes
          tr             
            td= cliente.usuarioId
            td= cliente.nombre
            td= cliente.empresa
            td= cliente['correo electronico']
            td= cliente.telefono
            td= cliente.industria
            td= cliente['tamaño de la empresa']
            td= cliente.direccion
  else
    p No hay clientes registrados.
    
            



