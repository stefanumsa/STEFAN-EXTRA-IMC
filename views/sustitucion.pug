doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title STEFAN-ORDINARIO-CLIENTE
    link(rel="stylesheet", href="/css/style.css")
  body
    nav
      ul
        li
          a(href='/') Inicio
        li.dropdown
          a(href='#') -Agregar-
          .dropdown-content
            a(href='/cesar') Añadir Cliente.
            a(href='/base64') Añadir Interacción.
            a(href='/hexadecimal') Añadir Informe.

        li.dropdown
          a(href='#') -Ver-
          .dropdown-content
            a(href='/clientes') Ver Cliente.
            a(href='/interacciones') Ver Interaccion.
            a(href='/informes') Ver Informe.     

    .container
      block content
      h1 Registrar Oportunidad de Venta
      <div class="container">
       a(href='/ventas') Ver Oportunidad de Venta Agregadas.</a>
      </div>

      .oportunidad-container
        form(action="/ventas", method="POST")
          .form-group
            label(for="titulo") Título de la Venta:
            input(type="text", id="titulo", placeholder='Titulo de la Venta' name="titulo", required=true)
          .form-group
            label(for="descripcion") Descripción de la Venta:
            textarea(id="descripcion", placeholder='Descripción de la Venta' name="descripcion")
          .form-group
            label(for="estado") Estado de la Venta:
            select(id="estado", name="estado")
              option(value="Nueva") Nueva
              option(value="En progreso") En progreso
              option(value="Cerrada") Cerrada
              
          .form-group
            label(for="clienteID") ID del Usuario:
            input(type="text" id="clienteID" placeholder='ID del Usuario' name="clienteID" required)
          
          .form-group
            button(type="submit") Agregar Oportunidad
