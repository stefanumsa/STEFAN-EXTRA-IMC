doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title STEFAN-ORDINARIO-CLIENTE-
    link(rel="stylesheet", href="/css/style.css")
  body
    nav
      ul 
        li
          a(href='/') -Inicio-
       
        li.dropdown
          a(href='#') -Agregar-
          .dropdown-content
            a(href='/cesar') Agregar Cliente.
            a(href='/sustitucion') Agregar Oportunidad de Venta.
            a(href='/base64') Agregar Interaccion.

        li.dropdown
          a(href='#') -Ver-
          .dropdown-content
            a(href='/clientes') Ver Cliente.
            a(href='/ventas') Ver Oportunidad de Venta.
            a(href='/interacciones') Ver Interaccion.
     

    .container
    block content
      h1 Informes de Ventas
      <div class="container">
       a(href='/hexadecimal') Agregar informe.</a>
      </div>

      if informes.length > 0
        table.table.table-striped
          thead
            tr
              th | ID del Usuario. |
              th Nombre del Cliente. |
              th Fecha de la Venta. |
              th Monto de la Venta. |
              th Producto Vendido. |
              th Satisfacci√≥n del Cliente. |
              th Comentarios del Cliente. |
          tbody
            each informe in informes
              tr
                td= informe.usuarioId
                td= informe.clienteNombre
                td= informe.fechaVenta
                td= informe.montoVenta
                td= informe.productoVendido
                td= informe.satisfaccionCliente
                td= informe.comentariosCliente
      else
        p No hay informes registrados.

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
